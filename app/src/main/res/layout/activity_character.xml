<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_winter">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Select Character"
        android:textColor="#FFEB3B"
        android:textSize="44sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#80000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:padding="8dp"
        android:background="@drawable/title_text_outline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/advantureGirlCharacter"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/character_unselected"
                android:padding="12dp"
                android:src="@drawable/advanture_girl_character"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Advanture_Girl"
                android:textColor="#FFEB3B"
                android:textSize="22sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <Button
                android:id="@+id/selectAdvantureGirlButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select"
                android:background="@drawable/transparent_blackborder_button"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/hatmanCharacter"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/character_unselected"
                android:padding="12dp"
                android:src="@drawable/hatman_character"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hatman"
                android:textColor="#FFEB3B"
                android:textSize="22sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <Button
                android:id="@+id/selectHatmanButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select"
                android:background="@drawable/transparent_blackborder_button"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ninjaCharacter"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/character_unselected"
                android:padding="12dp"
                android:src="@drawable/ninja_character"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ninja"
                android:textColor="#FFEB3B"
                android:textSize="22sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <Button
                android:id="@+id/selectNinjaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select"
                android:background="@drawable/transparent_blackborder_button"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/transparent_blackborder_button"
        android:text="Back"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:padding="16dp"/>

</RelativeLayout> 