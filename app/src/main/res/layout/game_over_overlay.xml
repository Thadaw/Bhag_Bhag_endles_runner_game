<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameOverOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/gameOverInnerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/leaderboard_background"
        android:padding="32dp"
        android:layout_margin="32dp">

        <!-- Game Over Title -->

        <!-- Final Score -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ† Score: "
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/finalScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="28sp"
                android:textColor="#FFD700"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Final Coins -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸª™ Coins: "
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/finalCoinsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="28sp"
                android:textColor="#FFD700"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Horizontal Button Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- Restart Button -->
            <ImageButton
                android:id="@+id/restartGameButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/restart_icon"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:contentDescription="Restart Game" />

            <!-- Back to Menu Button -->
            <ImageButton
                android:id="@+id/backToMenuButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_back_icon"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:contentDescription="Back to Menu" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout> 